<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>OmniGrid NX | Master PDF Merger</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root { --nx-indigo: #6366f1; --nx-bg: #ffffff; --nx-border: #f1f5f9; }
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: var(--nx-bg); color: #0f172a; overflow-x: hidden; }
        #bg-canvas { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; background: radial-gradient(circle at 50% 50%, #f5f3ff 0%, #ffffff 100%); }
        @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px) scale(0.98); } to { opacity: 1; transform: translateY(0) scale(1); } }
        .animate-hero { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) both; }
        .animate-card { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.2s both; }
        .progress-container { width: 100%; height: 6px; background: #f1f5f9; border-radius: 10px; overflow: hidden; margin: 20px 0; }
        .progress-bar { width: 0%; height: 100%; background: linear-gradient(90deg, #6366f1, #8b5cf6); transition: width 0.4s ease; }
        .glass-feature { background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(10px); border: 1px solid rgba(241, 245, 249, 1); transition: all 0.3s ease; }
        .glass-feature:hover { background: white; transform: translateY(-5px); box-shadow: 0 20px 25px -5px rgba(99, 102, 241, 0.1); }
        .shape { position: absolute; background: var(--nx-indigo); filter: blur(100px); opacity: 0.05; z-index: -1; border-radius: 50%; animation: float 25s infinite alternate; }
        @keyframes float { 0% { transform: translate(0, 0) rotate(0deg); } 100% { transform: translate(150px, 100px) rotate(15deg); } }
        .file-item { border: 1px solid #f1f5f9; transition: all 0.2s ease; }
        .file-item:hover { border-color: #6366f1; background: #fcfaff; }
    </style>
</head>
<body class="antialiased">

    <div id="bg-canvas">
        <div class="shape w-[500px] h-[500px] top-[-100px] left-[-100px]"></div>
        <div class="shape w-[400px] h-[400px] bottom-[-50px] right-[-50px]" style="animation-delay: -7s; background: #9333ea;"></div>
    </div>

    <nav class="px-6 py-6 border-b border-slate-100 flex justify-between items-center bg-white/80 backdrop-blur-xl sticky top-0 z-50">
        <div class="flex items-center gap-3">
            <div class="bg-indigo-600 w-8 h-8 rounded-lg flex items-center justify-center rotate-12 shadow-lg shadow-indigo-200">
                <i class="fas fa-layer-group text-white text-xs"></i>
            </div>
            <span class="text-xl font-black tracking-tighter">OMNIGrid <span class="text-indigo-600 italic text-sm">PRO</span></span>
        </div>
        <button class="bg-slate-900 text-white px-6 py-2.5 rounded-full text-[10px] font-bold hover:bg-indigo-600 transition shadow-xl tracking-widest uppercase">
            Unified Workflow
        </button>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-12 lg:py-20">
        <div class="flex flex-col lg:flex-row items-center gap-16">
            
            <div class="lg:w-1/2 animate-hero">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-50 border border-indigo-100 mb-6">
                    <span class="text-[10px] font-bold text-indigo-700 uppercase tracking-widest">Multi-File Stream Combiner</span>
                </div>
                <h1 class="text-5xl lg:text-7xl font-extrabold tracking-tight leading-[1.1] mb-8">
                    Merge <span class="text-indigo-600">PDF</span> <br>Seamlessly.
                </h1>
                <p class="text-lg text-slate-500 font-medium mb-10 max-w-lg leading-relaxed">
                    Combine multiple documents into a single, organized PDF file. We preserve page order, bookmarks, and internal links with absolute integrity.
                </p>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-indigo-600/10 flex items-center justify-center shrink-0"><i class="fas fa-layer-group text-indigo-600"></i></div>
                        <div><h4 class="font-bold text-sm">Infinite Pages</h4><p class="text-xs text-slate-400 mt-1">No limit on file quantity.</p></div>
                    </div>
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-purple-600/10 flex items-center justify-center shrink-0"><i class="fas fa-bolt text-purple-600"></i></div>
                        <div><h4 class="font-bold text-sm">Instant Stitch</h4><p class="text-xs text-slate-400 mt-1">Direct stream processing.</p></div>
                    </div>
                </div>
            </div>

            <div class="lg:w-1/2 w-full animate-card">
                <div class="bg-white p-3 rounded-[3rem] shadow-[0_32px_64px_-16px_rgba(99,102,241,0.15)] border border-slate-50 relative overflow-hidden">
                    <div id="drop-zone" class="bg-slate-50 rounded-[2.6rem] py-16 px-8 text-center border-2 border-dashed border-slate-200 transition-all cursor-pointer hover:border-indigo-400 group">
                        <input type="file" id="fileInput" class="hidden" accept=".pdf" multiple>
                        
                        <div id="idle-ui">
                            <div class="relative w-24 h-24 mx-auto mb-8">
                                <div class="absolute inset-0 bg-indigo-600 blur-2xl opacity-20 group-hover:opacity-40 transition-opacity"></div>
                                <div class="relative w-full h-full bg-white rounded-3xl shadow-sm flex items-center justify-center border border-slate-100">
                                    <i class="fas fa-plus-circle text-indigo-600 text-3xl"></i>
                                </div>
                            </div>
                            <h3 class="text-2xl font-black mb-2">Combine PDFs</h3>
                            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-10">Select 2 or more files</p>
                            <button onclick="document.getElementById('fileInput').click()" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black text-xs tracking-[0.2em] shadow-xl hover:bg-indigo-600 transition-all">
                                CHOOSE MULTIPLE FILES
                            </button>
                        </div>

                        <div id="queue-ui" class="hidden text-left animate-hero">
                            <div class="flex justify-between items-center mb-6">
                                <h4 class="text-[10px] font-black uppercase tracking-widest text-slate-400">Selected Queue</h4>
                                <span id="queue-count" class="bg-indigo-100 text-indigo-600 px-3 py-1 rounded-full text-[10px] font-bold">0 Files</span>
                            </div>
                            
                            <div id="file-queue" class="space-y-3 mb-8 max-h-64 overflow-y-auto pr-2 custom-scrollbar">
                                </div>

                            <div class="grid grid-cols-2 gap-3 mb-4">
                                <button onclick="document.getElementById('fileInput').click()" class="bg-white border border-slate-200 text-slate-600 py-4 rounded-xl font-bold text-[10px] uppercase tracking-widest hover:bg-slate-50 transition-all">
                                    Add More
                                </button>
                                <button onclick="startMerge()" class="bg-indigo-600 text-white py-4 rounded-xl font-black text-[10px] uppercase tracking-widest shadow-lg shadow-indigo-100 hover:bg-indigo-700 transition-all">
                                    Merge Now
                                </button>
                            </div>
                        </div>

                        <div id="processing-ui" class="hidden">
                            <div class="w-16 h-16 border-4 border-indigo-500 border-t-transparent rounded-full animate-spin mx-auto mb-8"></div>
                            <h3 id="status-text" class="text-xl font-extrabold text-slate-800 italic">Binding...</h3>
                            <div class="progress-container">
                                <div class="progress-bar" id="p-bar"></div>
                            </div>
                            <p class="text-[10px] font-black text-indigo-500 uppercase tracking-widest animate-pulse">Syncing Document Buffers</p>
                        </div>

                        <div id="complete-ui" class="hidden">
                            <div class="w-20 h-20 bg-emerald-500 text-white rounded-full flex items-center justify-center mx-auto mb-8 shadow-lg shadow-emerald-100">
                                <i class="fas fa-check-double text-2xl"></i>
                            </div>
                            <h3 class="text-2xl font-black mb-1">Files Merged!</h3>
                            <p class="text-xs font-bold text-slate-400 mb-10 uppercase tracking-widest">Unified PDF is ready</p>
                            
                            <div class="space-y-3">
                                <button id="downloadBtn" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black text-[10px] tracking-[0.2em] shadow-lg hover:bg-indigo-600 transition-all uppercase">
                                    <i class="fas fa-download mr-2"></i> DOWNLOAD MERGED PDF
                                </button>
                                <button onclick="location.reload()" class="text-xs font-bold text-slate-400 hover:text-slate-900 transition underline underline-offset-4">
                                    Start new merge
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        const socket = io();
        let socketId = "";
        let selectedFiles = [];

        socket.on('connect', () => { socketId = socket.id; });

        socket.on('conversion-status', (msg) => {
            document.getElementById('status-text').innerText = msg;
            let bar = document.getElementById('p-bar');
            let currentWidth = parseFloat(bar.style.width) || 0;
            if (currentWidth < 90) bar.style.width = (currentWidth + 15) + "%";
        });

        socket.on('conversion-finished', (data) => {
            document.getElementById('p-bar').style.width = "100%";
            setTimeout(() => {
                document.getElementById('processing-ui').classList.add('hidden');
                document.getElementById('complete-ui').classList.remove('hidden');
                document.getElementById('downloadBtn').onclick = () => window.location.href = data.downloadUrl;
            }, 600);
        });

        const fileInput = document.getElementById('fileInput');
        fileInput.onchange = (e) => {
            if(e.target.files.length) {
                const newFiles = Array.from(e.target.files);
                selectedFiles = [...selectedFiles, ...newFiles];
                updateQueueUI();
            }
        };

        function updateQueueUI() {
            const queueContainer = document.getElementById('file-queue');
            const idleUI = document.getElementById('idle-ui');
            const queueUI = document.getElementById('queue-ui');
            
            idleUI.classList.add('hidden');
            queueUI.classList.remove('hidden');
            
            document.getElementById('queue-count').innerText = `${selectedFiles.length} Files`;
            
            queueContainer.innerHTML = selectedFiles.map((file, idx) => `
                <div class="file-item p-4 rounded-2xl bg-white flex items-center justify-between group">
                    <div class="flex items-center gap-4 overflow-hidden">
                        <div class="w-8 h-8 rounded-lg bg-indigo-50 flex items-center justify-center text-indigo-600 font-bold text-xs shrink-0">${idx + 1}</div>
                        <div class="overflow-hidden">
                            <p class="font-bold text-xs text-slate-800 truncate">${file.name}</p>
                            <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest">${(file.size / 1024 / 1024).toFixed(2)} MB</p>
                        </div>
                    </div>
                    <button onclick="removeFile(${idx})" class="text-slate-300 hover:text-red-500 transition px-2">
                        <i class="fas fa-times-circle"></i>
                    </button>
                </div>
            `).join('');
        }

        function removeFile(index) {
            selectedFiles.splice(index, 1);
            if (selectedFiles.length === 0) {
                location.reload();
            } else {
                updateQueueUI();
            }
        }

        async function startMerge() {
            if (selectedFiles.length < 2) {
                alert("Please add at least 2 PDF files to merge.");
                return;
            }

            document.getElementById('queue-ui').classList.add('hidden');
            document.getElementById('processing-ui').classList.remove('hidden');

            const formData = new FormData();
            selectedFiles.forEach(file => formData.append("pdfs", file));
            formData.append("socketId", socketId);

            try {
                // Route should match your server.js (e.g., /merge-pdf)
                const response = await fetch("/merge-pdf", { method: "POST", body: formData });
                if (!response.ok) throw new Error("Merge process failed.");
            } catch (err) {
                alert("Error: " + err.message);
                location.reload();
            }
        }
    </script>
</body>
</html>