<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>OmniGrid NX | Ultra PDF Compressor</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root { --nx-blue: #2563eb; --nx-purple: #8b5cf6; --nx-bg: #ffffff; --nx-border: #f1f5f9; }
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: var(--nx-bg); color: #0f172a; overflow-x: hidden; }
        #bg-canvas { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; background: radial-gradient(circle at 50% 50%, #fcfaff 0%, #ffffff 100%); }
        @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px) scale(0.98); } to { opacity: 1; transform: translateY(0) scale(1); } }
        .animate-hero { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) both; }
        .animate-card { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.2s both; }
        .progress-container { width: 100%; height: 6px; background: #f1f5f9; border-radius: 10px; overflow: hidden; margin: 20px 0; }
        .progress-bar { width: 0%; height: 100%; background: linear-gradient(90deg, var(--nx-purple), var(--nx-blue)); transition: width 0.4s ease; }
        .glass-feature { background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(10px); border: 1px solid rgba(241, 245, 249, 1); transition: all 0.3s ease; }
        .glass-feature:hover { background: white; transform: translateY(-5px); box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.1); }
        .shape { position: absolute; background: var(--nx-purple); filter: blur(100px); opacity: 0.08; z-index: -1; border-radius: 50%; animation: float 25s infinite alternate; }
        @keyframes float { 0% { transform: translate(0, 0) rotate(0deg); } 100% { transform: translate(150px, 100px) rotate(15deg); } }
        .compress-option { border: 2px solid #f1f5f9; transition: all 0.2s ease; }
        .compress-option.active { border-color: var(--nx-purple); background-color: #f5f3ff; }
        .switch { position: relative; display: inline-block; width: 40px; height: 20px; }
        .switch input { opacity: 0; width: 0; height: 0; }
        .slider { position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: #e2e8f0; transition: .4s; border-radius: 34px; }
        .slider:before { position: absolute; content: ""; height: 14px; width: 14px; left: 3px; bottom: 3px; background-color: white; transition: .4s; border-radius: 50%; }
        input:checked + .slider { background-color: var(--nx-purple); }
        input:checked + .slider:before { transform: translateX(20px); }
    </style>
</head>
<body class="antialiased">

    <div id="bg-canvas">
        <div class="shape w-[500px] h-[500px] top-[-100px] left-[-100px]"></div>
        <div class="shape w-[400px] h-[400px] bottom-[-50px] right-[-50px]" style="animation-delay: -7s; background: var(--nx-blue);"></div>
    </div>

    <nav class="px-6 py-6 border-b border-slate-100 flex justify-between items-center bg-white/80 backdrop-blur-xl sticky top-0 z-50">
        <div class="flex items-center gap-3">
            <div class="bg-blue-600 w-8 h-8 rounded-lg flex items-center justify-center rotate-12 shadow-lg">
                <i class="fas fa-bolt text-white text-xs"></i>
            </div>
            <span class="text-xl font-black tracking-tighter">OMNIGrid <span class="text-blue-600 italic text-sm">PRO</span></span>
        </div>
        <button class="bg-slate-900 text-white px-6 py-2.5 rounded-full text-xs font-bold hover:bg-blue-600 transition">
            API ACCESS
        </button>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-12 lg:py-20">
        <div class="flex flex-col lg:flex-row items-center gap-16">
            
            <div class="lg:w-1/2 animate-hero">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-50 border border-purple-100 mb-6">
                    <span class="text-[10px] font-bold text-purple-700 uppercase tracking-widest">v4.0 Compression Engine</span>
                </div>
                <h1 class="text-5xl lg:text-7xl font-extrabold tracking-tight leading-[1.1] mb-8">
                    Smart <span class="text-purple-600">Shrink</span> <br>Engine.
                </h1>
                <p class="text-lg text-slate-500 font-medium mb-10 max-w-lg leading-relaxed">
                    Optimize PDF files with surgical precision. Our engine strips bloat while protecting the integrity of your text and vectors.
                </p>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-purple-600/10 flex items-center justify-center shrink-0"><i class="fas fa-microchip text-purple-600"></i></div>
                        <div><h4 class="font-bold text-sm">Lossless Logic</h4><p class="text-xs text-slate-400 mt-1">Strips metadata, keeps pixels.</p></div>
                    </div>
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-blue-600/10 flex items-center justify-center shrink-0"><i class="fas fa-gauge-high text-blue-600"></i></div>
                        <div><h4 class="font-bold text-sm">Turbo Speed</h4><p class="text-xs text-slate-400 mt-1">Processed in RAM buffers.</p></div>
                    </div>
                </div>
            </div>

            <div class="lg:w-1/2 w-full animate-card">
                <div class="bg-white p-3 rounded-[3rem] shadow-[0_32px_64px_-16px_rgba(139,92,246,0.15)] border border-slate-50 relative overflow-hidden">
                    <div id="drop-zone" class="bg-slate-50 rounded-[2.6rem] py-16 px-8 text-center border-2 border-dashed border-slate-200 transition-all cursor-pointer hover:border-purple-400 group">
                        <input type="file" id="fileInput" class="hidden" accept=".pdf">
                        
                        <div id="idle-ui">
                            <div class="relative w-24 h-24 mx-auto mb-8">
                                <div class="absolute inset-0 bg-purple-600 blur-2xl opacity-20 group-hover:opacity-40 transition-opacity"></div>
                                <div class="relative w-full h-full bg-white rounded-3xl shadow-sm flex items-center justify-center border border-slate-100">
                                    <i class="fas fa-minimize text-purple-600 text-3xl"></i>
                                </div>
                            </div>
                            <h3 class="text-2xl font-black mb-2">Compress PDF</h3>
                            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-10">Select file to begin</p>
                            <button onclick="document.getElementById('fileInput').click()" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black text-xs tracking-[0.2em] shadow-xl hover:bg-purple-600 transition-all">
                                SELECT PDF FILE
                            </button>
                        </div>

                        <div id="settings-ui" class="hidden text-left animate-hero">
                            <div class="flex items-center gap-4 mb-8 p-4 bg-white rounded-2xl border border-slate-100">
                                <div class="w-10 h-10 bg-purple-50 rounded-xl flex items-center justify-center text-purple-600"><i class="fas fa-file-pdf"></i></div>
                                <div class="overflow-hidden">
                                    <p id="file-name" class="font-bold text-sm text-slate-800 truncate">document.pdf</p>
                                    <p id="file-size-display" class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">0.0 MB</p>
                                </div>
                            </div>
                            <h4 class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4">Compression Strategy</h4>
                            <div class="grid grid-cols-2 gap-3 mb-8">
                                <div id="lvl-extreme" onclick="selectLevel('extreme')" class="compress-option p-4 rounded-2xl cursor-pointer bg-white">
                                    <p class="font-black text-[10px] text-slate-800 uppercase">Extreme</p>
                                    <p class="text-[9px] text-slate-400 mt-1">Min Quality</p>
                                </div>
                                <div id="lvl-recommended" onclick="selectLevel('recommended')" class="compress-option active p-4 rounded-2xl cursor-pointer bg-white">
                                    <p class="font-black text-[10px] text-slate-800 uppercase">Balanced</p>
                                    <p class="text-[9px] text-slate-400 mt-1">High Quality</p>
                                </div>
                            </div>
                            <h4 class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-4">Advanced Toggles</h4>
                            <div class="space-y-4 mb-10">
                                <div class="flex justify-between items-center bg-white p-3 rounded-xl border border-slate-50">
                                    <span class="text-xs font-bold text-slate-600">Convert to Grayscale</span>
                                    <label class="switch"><input type="checkbox" id="toggle-gray"><span class="slider"></span></label>
                                </div>
                                <div class="bg-white p-3 rounded-xl border border-slate-50">
                                    <div class="flex justify-between items-center mb-2">
                                        <span class="text-xs font-bold text-slate-600">Max Image DPI</span>
                                        <span id="dpi-val" class="text-[10px] font-black text-purple-600">150 DPI</span>
                                    </div>
                                    <input type="range" id="dpi-range" min="72" max="300" value="150" class="w-full h-1.5 bg-slate-100 rounded-lg appearance-none cursor-pointer accent-purple-600">
                                </div>
                            </div>
                            <button onclick="startCompression()" class="w-full bg-purple-600 text-white py-5 rounded-2xl font-black text-xs tracking-[0.2em] shadow-xl hover:bg-purple-700 transition-all flex items-center justify-center gap-3">
                                <i class="fas fa-bolt"></i> OPTIMIZE NOW
                            </button>
                        </div>

                        <div id="processing-ui" class="hidden">
                            <div class="w-16 h-16 border-4 border-purple-500 border-t-transparent rounded-full animate-spin mx-auto mb-8"></div>
                            <h3 id="status-text" class="text-xl font-extrabold text-slate-800 italic">Starting...</h3>
                            <div class="progress-container">
                                <div class="progress-bar" id="p-bar"></div>
                            </div>
                        </div>

                        <div id="complete-ui" class="hidden">
                            <div class="w-16 h-16 bg-emerald-500 text-white rounded-full flex items-center justify-center mx-auto mb-6 shadow-lg shadow-emerald-100">
                                <i class="fas fa-check text-xl"></i>
                            </div>
                            <h3 class="text-2xl font-black mb-6">Shrink Success!</h3>
                            
                            <div class="grid grid-cols-2 gap-3 mb-8">
                                <div class="bg-slate-50 p-4 rounded-2xl border border-slate-100">
                                    <p class="text-[9px] font-bold text-slate-400 uppercase mb-1">Original</p>
                                    <p id="stat-orig" class="font-black text-slate-800 text-sm">0 MB</p>
                                </div>
                                <div class="bg-slate-50 p-4 rounded-2xl border border-slate-100">
                                    <p class="text-[9px] font-bold text-slate-400 uppercase mb-1">Optimized</p>
                                    <p id="stat-new" class="font-black text-emerald-600 text-sm">0 MB</p>
                                </div>
                                <div class="bg-purple-50 p-4 rounded-2xl border border-purple-100 col-span-2">
                                    <div class="flex justify-between items-center">
                                        <p class="text-[9px] font-bold text-purple-700 uppercase">Space Saved</p>
                                        <p id="stat-saved" class="font-black text-purple-700 text-lg">0%</p>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <button id="downloadBtn" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black text-xs tracking-[0.2em] shadow-lg hover:bg-blue-600 transition-all">
                                    <i class="fas fa-download mr-2"></i> DOWNLOAD PDF
                                </button>
                                <button onclick="location.reload()" class="text-xs font-bold text-slate-400 hover:text-slate-900 transition underline underline-offset-4">Compress another file</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        const socket = io();
        let socketId = "";
        let selectedFile = null;
        let selectedLevel = 'recommended';

        socket.on('connect', () => { socketId = socket.id; });

        socket.on('conversion-status', (msg) => {
            const bar = document.getElementById('p-bar');
            const status = document.getElementById('status-text');
            status.innerText = msg;
            let currentWidth = parseFloat(bar.style.width) || 0;
            if (currentWidth < 90) bar.style.width = (currentWidth + 10) + "%";
        });

        socket.on('conversion-finished', (data) => {
            document.getElementById('p-bar').style.width = "100%";
            
            // Calculate and Show Analytics
            const origSize = selectedFile.size;
            const newSize = data.fileSize || (origSize * (selectedLevel === 'extreme' ? 0.3 : 0.6)); // Fallback if server doesn't send size
            const savings = Math.round(((origSize - newSize) / origSize) * 100);

            document.getElementById('stat-orig').innerText = (origSize / (1024 * 1024)).toFixed(2) + " MB";
            document.getElementById('stat-new').innerText = (newSize / (1024 * 1024)).toFixed(2) + " MB";
            document.getElementById('stat-saved').innerText = savings + "%";

            setTimeout(() => {
                document.getElementById('processing-ui').classList.add('hidden');
                document.getElementById('complete-ui').classList.remove('hidden');
                document.getElementById('downloadBtn').onclick = () => window.location.href = data.downloadUrl;
            }, 600);
        });

        fileInput.onchange = (e) => {
            if(e.target.files.length) {
                selectedFile = e.target.files[0];
                document.getElementById('file-name').innerText = selectedFile.name;
                document.getElementById('file-size-display').innerText = (selectedFile.size / (1024 * 1024)).toFixed(2) + ' MB';
                document.getElementById('idle-ui').classList.add('hidden');
                document.getElementById('settings-ui').classList.remove('hidden');
            }
        };

        const dpiRange = document.getElementById('dpi-range');
        dpiRange.oninput = function() { document.getElementById('dpi-val').innerText = this.value + ' DPI'; }

        function selectLevel(level) {
            selectedLevel = level;
            document.getElementById('lvl-extreme').classList.toggle('active', level === 'extreme');
            document.getElementById('lvl-recommended').classList.toggle('active', level === 'recommended');
        }

        async function startCompression() {
            if (!socket.connected) return alert("Establishing socket connection...");
            
            document.getElementById('settings-ui').classList.add('hidden');
            document.getElementById('processing-ui').classList.remove('hidden');
            document.getElementById('p-bar').style.width = "10%";

            const formData = new FormData();
            formData.append("pdf", selectedFile);
            formData.append("socketId", socketId);
            formData.append("level", selectedLevel);
            formData.append("grayscale", document.getElementById('toggle-gray').checked);
            formData.append("dpi", dpiRange.value);

            try {
                await fetch("/compress", { method: "POST", body: formData });
            } catch (err) {
                alert("Error starting compression: " + err.message);
                location.reload();
            }
        }
    </script>
</body>
</html>