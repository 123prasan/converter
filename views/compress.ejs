<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>OmniGrid NX | Universal File Compressor</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root { --nx-blue: #2563eb; --nx-purple: #8b5cf6; --nx-bg: #ffffff; --nx-border: #f1f5f9; }
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: var(--nx-bg); color: #0f172a; overflow-x: hidden; }
        #bg-canvas { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; background: radial-gradient(circle at 50% 50%, #fcfaff 0%, #ffffff 100%); }
        @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px) scale(0.98); } to { opacity: 1; transform: translateY(0) scale(1); } }
        .animate-hero { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) both; }
        .animate-card { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.2s both; }
        .progress-container { width: 100%; height: 6px; background: #f1f5f9; border-radius: 10px; overflow: hidden; margin: 20px 0; }
        .progress-bar { width: 0%; height: 100%; background: linear-gradient(90deg, var(--nx-purple), var(--nx-blue)); transition: width 0.4s ease; }
        .glass-feature { background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(10px); border: 1px solid rgba(241, 245, 249, 1); transition: all 0.3s ease; }
        .glass-feature:hover { background: white; transform: translateY(-5px); box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.1); }
        .shape { position: absolute; background: var(--nx-purple); filter: blur(100px); opacity: 0.08; z-index: -1; border-radius: 50%; animation: float 25s infinite alternate; }
        @keyframes float { 0% { transform: translate(0, 0) rotate(0deg); } 100% { transform: translate(150px, 100px) rotate(15deg); } }
        .file-type-card { transition: all 0.3s ease; cursor: pointer; }
        .file-type-card:hover { border-color: currentColor; box-shadow: 0 10px 25px -5px rgba(139, 92, 246, 0.1); }
        .file-type-card.ring-2 { transform: scale(1.02); }
        .switch { position: relative; display: inline-block; width: 40px; height: 20px; }
        .switch input { opacity: 0; width: 0; height: 0; }
        .slider { position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0; background-color: #e2e8f0; transition: .4s; border-radius: 34px; }
        .slider:before { position: absolute; content: ""; height: 14px; width: 14px; left: 3px; bottom: 3px; background-color: white; transition: .4s; border-radius: 50%; }
        input:checked + .slider { background-color: var(--nx-purple); }
        input:checked + .slider:before { transform: translateX(20px); }
        .btn-level { transition: all 0.3s ease; }
        .btn-level.active { background-color: rgb(243, 232, 255); border-color: var(--nx-purple); }
    </style>
</head>
<body class="antialiased">

    <div id="bg-canvas">
        <div class="shape w-[500px] h-[500px] top-[-100px] left-[-100px]"></div>
        <div class="shape w-[400px] h-[400px] bottom-[-50px] right-[-50px]" style="animation-delay: -7s; background: var(--nx-blue);"></div>
    </div>

    <nav class="px-6 py-6 border-b border-slate-100 flex justify-between items-center bg-white/80 backdrop-blur-xl sticky top-0 z-50">
        <div class="flex items-center gap-3">
            <div class="bg-blue-600 w-8 h-8 rounded-lg flex items-center justify-center rotate-12 shadow-lg">
                <i class="fas fa-bolt text-white text-xs"></i>
            </div>
            <span class="text-xl font-black tracking-tighter">OMNIGrid <span class="text-blue-600 italic text-sm">PRO</span></span>
        </div>
        <button class="bg-slate-900 text-white px-6 py-2.5 rounded-full text-xs font-bold hover:bg-blue-600 transition">
            API ACCESS
        </button>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-12 lg:py-20">
        <div class="flex flex-col lg:flex-row items-center gap-16">
            
            <div class="lg:w-1/2 animate-hero">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-purple-50 border border-purple-100 mb-6">
                    <span class="text-[10px] font-bold text-purple-700 uppercase tracking-widest">v5.0 Universal Compression</span>
                </div>
                <h1 class="text-5xl lg:text-7xl font-extrabold tracking-tight leading-[1.1] mb-8">
                    Smart <span class="text-purple-600">Shrink</span> <br>Any File.
                </h1>
                <p class="text-lg text-slate-500 font-medium mb-10 max-w-lg leading-relaxed">
                    Compress PDF, DOCX, Images and more with surgical precision. Our multi-format engine strips bloat while protecting quality and integrity.
                </p>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-purple-600/10 flex items-center justify-center shrink-0"><i class="fas fa-microchip text-purple-600"></i></div>
                        <div><h4 class="font-bold text-sm">Smart Shrinking</h4><p class="text-xs text-slate-400 mt-1">Format-aware compression.</p></div>
                    </div>
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-blue-600/10 flex items-center justify-center shrink-0"><i class="fas fa-gauge-high text-blue-600"></i></div>
                        <div><h4 class="font-bold text-sm">Turbo Speed</h4><p class="text-xs text-slate-400 mt-1">Processed in RAM buffers.</p></div>
                    </div>
                </div>
            </div>

            <div class="lg:w-1/2 w-full animate-card">
                <div class="bg-white p-3 rounded-[3rem] shadow-[0_32px_64px_-16px_rgba(139,92,246,0.15)] border border-slate-50 relative overflow-hidden">
                    <div id="main-container" class="bg-slate-50 rounded-[2.6rem] py-16 px-8 text-center border-2 border-slate-100 transition-all">
                        
                        <!-- STEP 1: SELECT FILE TYPE -->
                        <div id="step-select" class="space-y-6">
                            <h3 class="text-2xl font-black mb-1">Choose a File Type</h3>
                            <p class="text-xs text-slate-500 mb-8">Select what you want to compress</p>

                            <div id="type-pdf" onclick="selectFileType('pdf')" class="file-type-card p-6 bg-white rounded-2xl border-2 border-slate-100 text-left group">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <p class="text-lg font-black text-slate-800"><i class="fas fa-file-pdf text-red-600 mr-2"></i>PDF Document</p>
                                        <p class="text-xs text-slate-500 mt-2">Optimize with image compression</p>
                                    </div>
                                    <i class="fas fa-check-circle text-transparent group-hover:text-red-600 text-2xl transition-colors"></i>
                                </div>
                            </div>

                            <div id="type-docx" onclick="selectFileType('docx')" class="file-type-card p-6 bg-white rounded-2xl border-2 border-slate-100 text-left group">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <p class="text-lg font-black text-slate-800"><i class="fas fa-file-word text-blue-600 mr-2"></i>Word Document</p>
                                        <p class="text-xs text-slate-500 mt-2">Remove unused styles & fonts</p>
                                    </div>
                                    <i class="fas fa-check-circle text-transparent group-hover:text-blue-600 text-2xl transition-colors"></i>
                                </div>
                            </div>

                            <div id="type-image" onclick="selectFileType('image')" class="file-type-card p-6 bg-white rounded-2xl border-2 border-slate-100 text-left group">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <p class="text-lg font-black text-slate-800"><i class="fas fa-file-image text-purple-600 mr-2"></i>Image File</p>
                                        <p class="text-xs text-slate-500 mt-2">Compress JPG, PNG, GIF & more</p>
                                    </div>
                                    <i class="fas fa-check-circle text-transparent group-hover:text-purple-600 text-2xl transition-colors"></i>
                                </div>
                            </div>
                        </div>

                        <!-- STEP 2: UPLOAD FILE -->
                        <div id="step-upload" class="hidden space-y-6">
                            <button onclick="goBack()" class="mb-4 p-2 hover:bg-white rounded-lg transition-colors inline-block">
                                <i class="fas fa-arrow-left text-slate-600"></i>
                            </button>
                            <h3 class="text-2xl font-black mb-1">Upload Your File</h3>
                            <p class="text-xs text-slate-500 mb-8">Select the file you want to compress</p>

                            <input type="file" id="fileInput" style="display: none;">
                            
                            <div onclick="triggerFileInput()" class="drop-area bg-white rounded-2xl border-2 border-dashed border-slate-300 p-12 text-center cursor-pointer hover:border-purple-500 hover:bg-purple-50 transition-all">
                                <p class="text-4xl text-slate-300 mb-3"><i class="fas fa-cloud-arrow-up"></i></p>
                                <p class="font-black text-slate-800">Click or drag to upload</p>
                                <p class="text-xs text-slate-400 mt-1">Select the file you want to compress</p>
                            </div>
                        </div>

                        <!-- STEP 3: CONFIGURE OPTIONS -->
                        <div id="step-configure" class="hidden space-y-6 text-left">
                            <button onclick="goBack()" class="mb-4 p-2 hover:bg-white rounded-lg transition-colors inline-block">
                                <i class="fas fa-arrow-left text-slate-600"></i>
                            </button>
                            <h3 class="text-2xl font-black mb-1">Compression Settings</h3>
                            <p class="text-xs text-slate-500 mb-6">Configure how to compress your file</p>

                            <!-- File Info -->
                            <div class="flex items-center gap-4 p-4 bg-white rounded-2xl border border-slate-100">
                                <div id="file-info-icon" class="w-12 h-12 rounded-xl flex items-center justify-center text-2xl"></div>
                                <div class="overflow-hidden flex-1">
                                    <p id="file-name" class="font-bold text-sm text-slate-800 truncate">document.pdf</p>
                                    <p id="file-size-display" class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">0.0 MB</p>
                                </div>
                            </div>

                            <!-- Format-Specific Options -->
                            <div id="options-section" class="bg-white rounded-xl border border-slate-100 p-4">
                                <p class="text-xs font-bold text-slate-600 mb-4">Options</p>
                                <div id="options-container" class="space-y-3"></div>
                            </div>

                            <!-- Compression Level -->
                            <div class="bg-white rounded-xl border border-slate-100 p-4">
                                <p class="text-xs font-bold text-slate-600 mb-3">Compression Level</p>
                                <div class="grid grid-cols-2 gap-3">
                                    <button id="lvl-recommended" class="active btn-level p-3 rounded-lg bg-purple-50 border border-purple-300 text-xs font-bold text-purple-700" onclick="selectLevel('recommended')">
                                        <i class="fas fa-leaf"></i> Recommended
                                    </button>
                                    <button id="lvl-extreme" class="btn-level p-3 rounded-lg bg-slate-50 border border-slate-300 text-xs font-bold text-slate-700" onclick="selectLevel('extreme')">
                                        <i class="fas fa-rocket"></i> Extreme
                                    </button>
                                </div>
                            </div>

                            <!-- Compress Button -->
                            <button onclick="startCompression()" class="w-full bg-gradient-to-r from-purple-600 to-purple-700 text-white font-black py-4 rounded-xl hover:shadow-lg transition-all">
                                <i class="fas fa-zap"></i> Compress Now
                            </button>
                        </div>

                        <!-- PROCESSING -->
                        <div id="processing-ui" class="hidden space-y-4">
                            <div class="w-16 h-16 border-4 border-purple-500 border-t-transparent rounded-full animate-spin mx-auto"></div>
                            <h3 id="status-text" class="text-xl font-extrabold text-slate-800 italic">Starting...</h3>
                            <div class="progress-container">
                                <div class="progress-bar" id="p-bar"></div>
                            </div>
                        </div>

                        <!-- COMPLETE -->
                        <div id="complete-ui" class="hidden space-y-4">
                            <div class="w-16 h-16 bg-emerald-500 text-white rounded-full flex items-center justify-center mx-auto shadow-lg shadow-emerald-100">
                                <i class="fas fa-check text-xl"></i>
                            </div>
                            <h3 class="text-2xl font-black">Success! File Compressed</h3>
                            
                            <div class="grid grid-cols-2 gap-3">
                                <div class="bg-slate-50 p-4 rounded-2xl border border-slate-100">
                                    <p class="text-[9px] font-bold text-slate-400 uppercase mb-1">Original</p>
                                    <p id="stat-orig" class="font-black text-slate-800 text-sm">0 MB</p>
                                </div>
                                <div class="bg-slate-50 p-4 rounded-2xl border border-slate-100">
                                    <p class="text-[9px] font-bold text-slate-400 uppercase mb-1">Optimized</p>
                                    <p id="stat-new" class="font-black text-emerald-600 text-sm">0 MB</p>
                                </div>
                                <div class="bg-purple-50 p-4 rounded-2xl border border-purple-100 col-span-2">
                                    <div class="flex justify-between items-center">
                                        <p class="text-[9px] font-bold text-purple-700 uppercase">Space Saved</p>
                                        <p id="stat-saved" class="font-black text-purple-700 text-lg">0%</p>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-3">
                                <button id="downloadBtn" class="w-full bg-slate-900 text-white py-4 rounded-2xl font-black text-xs tracking-[0.1em] shadow-lg hover:bg-blue-600 transition-all">
                                    <i class="fas fa-download"></i> DOWNLOAD FILE
                                </button>
                                <button onclick="location.reload()" class="text-xs font-bold text-slate-400 hover:text-slate-900 transition underline underline-offset-4">Compress another file</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        const socket = io();
        let socketId = "";
        let selectedFile = null;
        let selectedLevel = 'recommended';
        let selectedFileType = null;

        const fileTypeConfig = {
            pdf: {
                name: "PDF Document",
                icon: "fa-file-pdf",
                color: "text-red-600",
                bgColor: "bg-red-50",
                accepts: ".pdf",
                description: "Compress PDF files with image optimization",
                options: {
                    grayscale: { label: "Convert to Grayscale", default: false },
                    dpi: { label: "Max Image DPI", min: 72, max: 300, default: 150 }
                }
            },
            docx: {
                name: "Word Document",
                icon: "fa-file-word",
                color: "text-blue-600",
                bgColor: "bg-blue-50",
                accepts: ".docx,.doc",
                description: "Remove unused styles, fonts, and revision history",
                options: {}
            },
            image: {
                name: "Image File",
                icon: "fa-file-image",
                color: "text-purple-600",
                bgColor: "bg-purple-50",
                accepts: ".jpg,.jpeg,.png,.gif,.bmp,.webp",
                description: "Compress JPG, PNG, GIF, BMP, or WebP images",
                options: {}
            }
        };

        socket.on('connect', () => { socketId = socket.id; });

        socket.on('conversion-status', (msg) => {
            const bar = document.getElementById('p-bar');
            const status = document.getElementById('status-text');
            status.innerText = msg;
            let currentWidth = parseFloat(bar.style.width) || 0;
            if (currentWidth < 90) bar.style.width = (currentWidth + 10) + "%";
        });

        socket.on('conversion-finished', (data) => {
            document.getElementById('p-bar').style.width = "100%";
            
            const origSize = selectedFile.size;
            const newSize = data.fileSize || (origSize * (selectedLevel === 'extreme' ? 0.3 : 0.6));
            const savings = Math.round(((origSize - newSize) / origSize) * 100);

            document.getElementById('stat-orig').innerText = (origSize / (1024 * 1024)).toFixed(2) + " MB";
            document.getElementById('stat-new').innerText = (newSize / (1024 * 1024)).toFixed(2) + " MB";
            document.getElementById('stat-saved').innerText = savings + "%";

            setTimeout(() => {
                document.getElementById('processing-ui').classList.add('hidden');
                document.getElementById('complete-ui').classList.remove('hidden');
                document.getElementById('downloadBtn').onclick = () => window.location.href = data.downloadUrl;
            }, 600);
        });

        socket.on('conversion-error', (msg) => {
            alert("Error: " + msg);
            location.reload();
        });

        // Step 1: Choose File Type
        function selectFileType(type) {
            selectedFileType = type;
            selectedFile = null;
            
            // Update UI to show selected type
            document.querySelectorAll('.file-type-card').forEach(card => {
                card.classList.remove('ring-2', 'ring-purple-500', 'scale-105');
            });
            document.getElementById(`type-${type}`).classList.add('ring-2', 'ring-purple-500', 'scale-105');
            
            // Show upload area
            showStep('upload');
        }

        // Step 2: Upload File
        const fileInput = document.getElementById('fileInput');
        fileInput.onchange = (e) => {
            if (e.target.files.length) {
                selectedFile = e.target.files[0];
                document.getElementById('file-name').innerText = selectedFile.name;
                document.getElementById('file-size-display').innerText = (selectedFile.size / (1024 * 1024)).toFixed(2) + ' MB';
                document.getElementById('file-info-icon').className = `fas ${fileTypeConfig[selectedFileType].icon} ${fileTypeConfig[selectedFileType].color}`;
                
                // Show configuration step
                showStep('configure');
            }
        };

        function triggerFileInput() {
            fileInput.accept = fileTypeConfig[selectedFileType].accepts;
            fileInput.click();
        }

        // Step 3: Configure Options
        function updateConfigUI() {
            const optionsContainer = document.getElementById('options-container');
            const config = fileTypeConfig[selectedFileType];
            
            let html = '';
            for (const [key, option] of Object.entries(config.options)) {
                if (key === 'grayscale') {
                    html += `
                        <div class="flex justify-between items-center bg-white p-4 rounded-xl border border-slate-50">
                            <span class="text-xs font-bold text-slate-600">${option.label}</span>
                            <label class="switch">
                                <input type="checkbox" id="${key}">
                                <span class="slider"></span>
                            </label>
                        </div>
                    `;
                } else if (key === 'dpi') {
                    html += `
                        <div class="bg-white p-4 rounded-xl border border-slate-50">
                            <div class="flex justify-between items-center mb-3">
                                <span class="text-xs font-bold text-slate-600">${option.label}</span>
                                <span id="dpi-display" class="text-[10px] font-black text-purple-600">${option.default} DPI</span>
                            </div>
                            <input type="range" id="${key}" min="${option.min}" max="${option.max}" value="${option.default}" 
                                   class="w-full h-1.5 bg-slate-100 rounded-lg appearance-none cursor-pointer accent-purple-600"
                                   oninput="document.getElementById('dpi-display').innerText = this.value + ' DPI'">
                        </div>
                    `;
                }
            }
            
            optionsContainer.innerHTML = html || '<p class="text-center text-slate-400 text-xs">No additional options for this file type</p>';
        }

        // UI Flow Management
        function showStep(step) {
            document.getElementById('step-select').classList.add('hidden');
            document.getElementById('step-upload').classList.add('hidden');
            document.getElementById('step-configure').classList.add('hidden');
            
            if (step === 'select') {
                document.getElementById('step-select').classList.remove('hidden');
            } else if (step === 'upload') {
                document.getElementById('step-upload').classList.remove('hidden');
            } else if (step === 'configure') {
                updateConfigUI();
                document.getElementById('step-configure').classList.remove('hidden');
            }
        }

        function goBack() {
            if (selectedFile) {
                selectedFile = null;
                showStep('upload');
            } else {
                selectedFileType = null;
                showStep('select');
            }
        }

        function selectLevel(level) {
            selectedLevel = level;
            document.getElementById('lvl-extreme').classList.toggle('active', level === 'extreme');
            document.getElementById('lvl-recommended').classList.toggle('active', level === 'recommended');
        }

        async function startCompression() {
            if (!socket.connected) return alert("Establishing socket connection...");
            if (!selectedFile || !selectedFileType) return alert("Please select and upload a file first");
            
            showStep('processing');

            const formData = new FormData();
            formData.append("file", selectedFile);
            formData.append("socketId", socketId);
            formData.append("level", selectedLevel);
            
            // Add type-specific options
            if (selectedFileType === 'pdf') {
                formData.append("grayscale", document.getElementById('grayscale')?.checked || false);
                formData.append("dpi", document.getElementById('dpi')?.value || 150);
            }

            try {
                const endpoint = `/compress-${selectedFileType}`;
                const response = await fetch(endpoint, { method: "POST", body: formData });
                if (!response.ok) throw new Error("Compression failed");
            } catch (err) {
                alert("Error: " + err.message);
                location.reload();
            }
        }

        // Initialize
        showStep('select');
    </script>
</body>
</html>