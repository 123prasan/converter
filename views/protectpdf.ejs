<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>OmniGrid NX | Secure PDF Protection</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        :root { --nx-slate: #1e293b; --nx-bg: #ffffff; --nx-border: #f1f5f9; }
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: var(--nx-bg); color: #0f172a; overflow-x: hidden; }
        #bg-canvas { position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; background: radial-gradient(circle at 50% 50%, #f1f5f9 0%, #ffffff 100%); }
        @keyframes fadeInUp { from { opacity: 0; transform: translateY(30px) scale(0.98); } to { opacity: 1; transform: translateY(0) scale(1); } }
        .animate-hero { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) both; }
        .animate-card { animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.2s both; }
        .progress-container { width: 100%; height: 6px; background: #f1f5f9; border-radius: 10px; overflow: hidden; margin: 20px 0; }
        .progress-bar { width: 0%; height: 100%; background: linear-gradient(90deg, #1e293b, #475569); transition: width 0.4s ease; }
        .glass-feature { background: rgba(255, 255, 255, 0.6); backdrop-filter: blur(10px); border: 1px solid rgba(241, 245, 249, 1); transition: all 0.3s ease; }
        .glass-feature:hover { background: white; transform: translateY(-5px); box-shadow: 0 20px 25px -5px rgba(30, 41, 59, 0.1); }
        .shape { position: absolute; background: var(--nx-slate); filter: blur(100px); opacity: 0.05; z-index: -1; border-radius: 50%; animation: float 25s infinite alternate; }
        @keyframes float { 0% { transform: translate(0, 0) rotate(0deg); } 100% { transform: translate(150px, 100px) rotate(15deg); } }
        .pass-input { border: 2px solid #f1f5f9; transition: all 0.2s ease; }
        .pass-input:focus { border-color: #1e293b; outline: none; box-shadow: 0 0 0 4px rgba(30, 41, 59, 0.05); }
    </style>
</head>
<body class="antialiased">

    <div id="bg-canvas">
        <div class="shape w-[500px] h-[500px] top-[-100px] left-[-100px]"></div>
        <div class="shape w-[400px] h-[400px] bottom-[-50px] right-[-50px]" style="animation-delay: -7s; background: #2563eb;"></div>
    </div>

    <nav class="px-6 py-6 border-b border-slate-100 flex justify-between items-center bg-white/80 backdrop-blur-xl sticky top-0 z-50">
        <div class="flex items-center gap-3">
            <div class="bg-slate-900 w-8 h-8 rounded-lg flex items-center justify-center rotate-12 shadow-lg">
                <i class="fas fa-shield-halved text-white text-xs"></i>
            </div>
            <span class="text-xl font-black tracking-tighter">OMNIGrid <span class="text-blue-600 italic text-sm">PRO</span></span>
        </div>
        <button class="bg-slate-900 text-white px-6 py-2.5 rounded-full text-[10px] font-bold hover:bg-blue-600 transition shadow-xl tracking-widest uppercase">
            Vault Encryption
        </button>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-12 lg:py-20">
        <div class="flex flex-col lg:flex-row items-center gap-16">
            
            <div class="lg:w-1/2 animate-hero">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-100 border border-slate-200 mb-6">
                    <span class="text-[10px] font-bold text-slate-700 uppercase tracking-widest">Military-Grade AES-256</span>
                </div>
                <h1 class="text-5xl lg:text-7xl font-extrabold tracking-tight leading-[1.1] mb-8">
                    Fortify <span class="text-slate-800">PDF</span> <br>Security.
                </h1>
                <p class="text-lg text-slate-500 font-medium mb-10 max-w-lg leading-relaxed">
                    Prevent unauthorized access, copying, or printing. Encrypt your sensitive documents with industry-standard security protocols.
                </p>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-slate-900/10 flex items-center justify-center shrink-0"><i class="fas fa-user-shield text-slate-800"></i></div>
                        <div><h4 class="font-bold text-sm">Full Privacy</h4><p class="text-xs text-slate-400 mt-1">Locks open access.</p></div>
                    </div>
                    <div class="glass-feature p-5 rounded-2xl flex items-start gap-4">
                        <div class="w-10 h-10 rounded-xl bg-blue-600/10 flex items-center justify-center shrink-0"><i class="fas fa-key text-blue-600"></i></div>
                        <div><h4 class="font-bold text-sm">Anti-Copy</h4><p class="text-xs text-slate-400 mt-1">Disables text extraction.</p></div>
                    </div>
                </div>
            </div>

            <div class="lg:w-1/2 w-full animate-card">
                <div class="bg-white p-3 rounded-[3rem] shadow-[0_32px_64px_-16px_rgba(15,23,42,0.15)] border border-slate-50 relative overflow-hidden">
                    <div id="drop-zone" class="bg-slate-50 rounded-[2.6rem] py-16 px-8 text-center border-2 border-dashed border-slate-200 transition-all cursor-pointer hover:border-slate-800 group">
                        <input type="file" id="fileInput" class="hidden" accept=".pdf">
                        
                        <div id="idle-ui">
                            <div class="relative w-24 h-24 mx-auto mb-8">
                                <div class="absolute inset-0 bg-slate-800 blur-2xl opacity-10 group-hover:opacity-30 transition-opacity"></div>
                                <div class="relative w-full h-full bg-white rounded-3xl shadow-sm flex items-center justify-center border border-slate-100">
                                    <i class="fas fa-lock text-slate-800 text-3xl"></i>
                                </div>
                            </div>
                            <h3 class="text-2xl font-black mb-2">Secure Document</h3>
                            <p class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-10">Upload PDF to encrypt</p>
                            <button onclick="document.getElementById('fileInput').click()" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black text-xs tracking-[0.2em] shadow-xl hover:bg-slate-800 transition-all">
                                SELECT PDF FILE
                            </button>
                        </div>

                        <div id="password-ui" class="hidden text-left animate-hero">
                            <h3 class="text-xl font-black mb-2 text-slate-800">Set Security Password</h3>
                            <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-8 italic">Password required to open the document</p>
                            
                            <div class="relative mb-8">
                                <i class="fas fa-shield-halved absolute left-5 top-1/2 -translate-y-1/2 text-slate-300"></i>
                                <input type="password" id="userPass" placeholder="Enter security password" class="pass-input w-full py-5 pl-12 pr-6 rounded-2xl font-bold text-sm bg-white">
                            </div>

                            <button onclick="startProtection()" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black text-xs tracking-[0.2em] shadow-xl hover:scale-[1.02] transition-all flex items-center justify-center gap-3">
                                <i class="fas fa-vault"></i> ENCRYPT & PROTECT
                            </button>
                        </div>

                        <div id="processing-ui" class="hidden">
                            <div class="w-16 h-16 border-4 border-slate-800 border-t-transparent rounded-full animate-spin mx-auto mb-8"></div>
                            <h3 id="status-text" class="text-xl font-extrabold text-slate-800">Encrypting...</h3>
                            <div class="progress-container">
                                <div class="progress-bar" id="p-bar"></div>
                            </div>
                            <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest animate-pulse">AES-256 Bit Ciphering</p>
                        </div>

                        <div id="complete-ui" class="hidden">
                            <div class="w-20 h-20 bg-emerald-500 text-white rounded-full flex items-center justify-center mx-auto mb-8 shadow-lg shadow-emerald-100">
                                <i class="fas fa-check text-2xl"></i>
                            </div>
                            <h3 class="text-2xl font-black mb-1">Locked & Secured</h3>
                            <p class="text-xs font-bold text-slate-400 mb-10 uppercase tracking-widest">Advanced protection applied</p>
                            
                            <div class="space-y-3">
                                <button id="downloadBtn" class="w-full bg-slate-900 text-white py-5 rounded-2xl font-black text-[10px] tracking-[0.2em] shadow-lg hover:bg-blue-600 transition-all uppercase">
                                    <i class="fas fa-download mr-2"></i> DOWNLOAD PROTECTED PDF
                                </button>
                                <button onclick="location.reload()" class="text-xs font-bold text-slate-400 hover:text-slate-900 transition underline underline-offset-4">
                                    Protect another file
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        const socket = io();
        let socketId = "";
        let selectedFile = null;

        socket.on('connect', () => { socketId = socket.id; });

        socket.on('conversion-status', (msg) => {
            const statusLabel = document.getElementById('status-text');
            statusLabel.innerText = msg;
            
            let bar = document.getElementById('p-bar');
            let currentWidth = parseFloat(bar.style.width) || 0;
            if (currentWidth < 90) bar.style.width = (currentWidth + 20) + "%";
        });

        socket.on('conversion-finished', (data) => {
            document.getElementById('p-bar').style.width = "100%";
            setTimeout(() => {
                document.getElementById('processing-ui').classList.add('hidden');
                document.getElementById('complete-ui').classList.remove('hidden');
                document.getElementById('downloadBtn').onclick = () => window.location.href = data.downloadUrl;
            }, 600);
        });

        fileInput.onchange = (e) => {
            if(e.target.files.length) {
                selectedFile = e.target.files[0];
                document.getElementById('idle-ui').classList.add('hidden');
                document.getElementById('password-ui').classList.remove('hidden');
            }
        };

        async function startProtection() {
            const password = document.getElementById('userPass').value;
            if(!password || password.length < 1) {
                alert("Please set a password to secure the file.");
                return;
            }

            document.getElementById('password-ui').classList.add('hidden');
            document.getElementById('processing-ui').classList.remove('hidden');
            document.getElementById('p-bar').style.width = "10%";

            const formData = new FormData();
            formData.append("pdf", selectedFile);
            formData.append("password", password);
            formData.append("socketId", socketId);

            try {
                // Ensure the route matches your server.js lock route (e.g., /lock-pdf)
                const response = await fetch("/lock-pdf", {
                    method: "POST",
                    body: formData
                });
                if (!response.ok) throw new Error("Encryption request failed");
            } catch (err) {
                alert("Error: " + err.message);
                location.reload();
            }
        }
    </script>
</body>
</html>